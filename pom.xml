			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>${mysql.version}</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>mybatis-dal</finalName>
		<pluginManagement>
			<plugins>

				<!-- 定义JDK版本 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${maven-compiler-plugin.version}</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-resources-plugin</artifactId>
					<version>${maven-resources-plugin.version}</version>
				</plugin>

				<!-- 定义单元测试标准 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>${maven-surefire-plugin.version}</version>
					<configuration>
						<skip>false</skip>
						<skipTests>false</skipTests>
						<testFailureIgnore>false</testFailureIgnore>
					</configuration>
				</plugin>
				<!-- 生成MD5文件 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>${maven-antrun-plugin.version}</version>
					<executions>
						<execution>
							<phase>package</phase>
							<configuration>
								<!-- 必须设定failOnError=false，否则build会报“至少需要一个文件”错误 -->
								<failOnError>false</failOnError>
								<target>
									<checksum>
										<fileset dir="target">
											<include name="*" />
										</fileset>
									</checksum>
								</target>
							</configuration>
							<goals>
								<goal>run</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>${maven-war-plugin.version}</version>
					<configuration>
						<warName>${project.artifactId}-${project.version}</warName>
						<archive>
							<index>true</index>
							<manifest>
								<addClasspath>true</addClasspath>
							</manifest>
							<manifestEntries>
								<Specification-Vendor>The Store Corp.</Specification-Vendor>
							</manifestEntries>
							<manifestSections>
								<manifestSection>
									<name>Build Information</name>
									<manifestEntries>
										<Project>${project.artifactId}</Project>
										<ProjectVersion>${project.version}</ProjectVersion>
										<svnRevision>${SVN.committedRevision}</svnRevision>
										<BuildTime>${timestamp}</BuildTime>
										<BaseLine>${project.artifactId}-${project.version}-${SVN.committedRevision}-${timestamp}</BaseLine>
									</manifestEntries>
								</manifestSection>
								<manifestSection>
									<name>Job Information</name>
									<manifestEntries>
										<JobURL>${JOB_URL}</JobURL>
										<JobBuildURL>${BUILD_URL}</JobBuildURL>
									</manifestEntries>
								</manifestSection>
							</manifestSections>
						</archive>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<!--
				<includes>
					<include>config/dev/</include>
					<include>config/prod/</include>
					<include>config/test/</include>
				</includes>
				-->
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>config/${active.profile}/**</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
	<profiles>
		<!-- 开发/测试本地环境，默认激活 -->
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<active.profilename>dev</active.profilename>
			</properties>
		</profile>
		<!-- 测试环境 -->
		<profile>
			<id>test</id>
			<properties>
				<active.profilename>test</active.profilename>
				<active.driverClass>com.mysql.jdbc.Driver</active.driverClass>
				<active.name>confdata</active.name>
				<active.pwd>123456</active.pwd>
				<active.url>jdbc:mysql://113.57.196.18:23306/DB_CONFCENT?characterEncoding=utf8</active.url>
				<active.createPropertyFile>false</active.createPropertyFile>
				<active.autoReload>true</active.autoReload>
			</properties>
		</profile>
		<!-- 生产环境 -->
